{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["esnext"],
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "outDir": "dist",
  },
  "exclude": ["node_modules"],
  "extends": "tsconfig/base.json",
  "include": ["src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}