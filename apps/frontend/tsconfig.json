{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "@testing-library/jest-dom/vitest"]
  },
  "exclude": ["node_modules"],
  "extends": "tsconfig/base.json",
  "include": ["src", ".vitest/setup.ts"]
}